---
import SectionHeading from './SectionHeading.astro'
const { profile } = Astro.props
---
<div class="flex pb-8 print:py-2">
    <div class="w-1/2 pr-4 border-r lg:pr-12 print:border-none border-line">
        <SectionHeading>
            Entreprise
        </SectionHeading>
        <h3 class="text-2xl font-light leading-tight text-gray-900 font-header print:text-base dark:text-gray-200">
            {profile.company}
        </h3>
        {profile.for_hire &&
            <div class="pt-2 text-xs font-semibold uppercase font-header print:hidden">
                <span class="inline-block w-2 h-2 mr-1 bg-green-500 rounded-full"></span>
                <span class="text-gray-700 dark:text-gray-300">Disponible</span>
            </div>
        }
    </div>
    <div class="w-1/2 pl-4 lg:pl-12 print:text-right">
        <SectionHeading>
            Concentr√© sur
        </SectionHeading>
        <div class="text-2xl font-light leading-tight text-gray-900 font-header print:text-base dark:text-gray-200">
            {profile.focus}
            {profile.focus_url &&
                <div>
                    <a
                        aria-label="website"
                        class="inline-block w-4 h-4 transition-opacity duration-150 opacity-50 text-front hover:opacity-75"
                        href={profile.focus_url}
                        rel="noopener noreferrer"
                        target="_blank"
                    >
                    </a>
                </div>
            }
        </div>
    </div>
</div>
