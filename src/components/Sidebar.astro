---
import Location from './Location.astro';
import Avatar from './Avatar.astro';
import SocialLinks from './SocialLinks.astro';
import SectionHeading from './SectionHeading.astro';

const { profile, social } = Astro.props;
---

<aside
  class='w-full lg:w-1/3 lg:border-r border-line lg:px-6 xl:px-12 print:border-b-4 print:border-primaryLight print:pb-2'
>
  <div class='flex flex-col justify-between h-full'>
    <div class='print:flex print:flex-row print:justify-between'>
      <div class='flex flex-col print:flex-row-reverse print:gap-4'>
        <div class='flex flex-col print:flex-col-reverse'>
          <h2
            class='mb-4 text-xl font-light leading-none text-primary dark:text-primaryLight print:xl'
          >
            {profile.profession}
          </h2>
          <h1
            class='mb-6 text-2xl font-black leading-none break-words text-primaryDark dark:text-gray-100 print:text-3xl print:mb-2'
          >
            {profile.name}
          </h1>
        </div>
        {
          profile.image && (
            <Avatar src={profile.image.publicURL} title={profile.name} />
          )
        }
      </div>
      <div class='print:text-right'>
        {
          profile.location && (
            <Location
              location={profile.location}
              relocation={profile.relocation}
            />
          )
        }
      </div>
    </div>

    <div class='pt-8 pb-12 lg:py-0 print:hidden'>
      <SectionHeading>Liens</SectionHeading>
      <SocialLinks social={social} />
    </div>
  </div>
</aside>
