---
import ProjectStatus from './ProjectStatus.astro';
import ProjectTags from './ProjectTags.astro';
import ProjectIcon from './ProjectIcon.astro';
const { project } = Astro.props;
---

<div
  class='relative flex flex-wrap p-4 text-sm bg-gray-100 bg-no-repeat border-t-4 shadow-2xl border-line lg:p-8 dark:bg-gray-800 bg-opacity-30 dark:bg-opacity-30 border-primaryLight dark:border-primaryDark print:shadow-none'
>
  {
    project.image && (
      <div class='w-full pb-4 lg:w-2/5 lg:pr-8 lg:pb-0 print:hidden'>
        <img src={project.image} alt={project.name} />
      </div>
    )
  }
  <div class='lg:flex-1'>
    <h4 class='text-xl font-bold text-primaryDark dark:text-primaryLight'>
      {project.name}
    </h4>
    {
      project.url && (
        <div>
          <span>url:</span>
          <a
            class='underline break-all transition-opacity duration-150 hover:opacity-75 text-primaryDark dark:text-primaryLight'
            href={project.url}
            rel='noreferrer noopener'
            target='_blank'
          >
            {project.url}
          </a>
        </div>
      )
    }
    <p class='w-full py-4 text-gray-900 whitespace-pre-line dark:text-gray-200'>
      {project.description}
    </p>
    <ul class='pr-2'>
      {project.status && <ProjectStatus status={project.status} />}
      {project.tags && <ProjectTags tags={project.tags} />}
    </ul>

    {project.icon && <ProjectIcon icon={project.icon} />}
  </div>
</div>
